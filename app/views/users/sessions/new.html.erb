<div class="container">
<div class="d-flex align-items-center py-4 bg-body-secondary">
  <main class="form-signin w-100">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="text-center h3 mt-5 fw-normal">Client Login</h1>
      <div class="btn-group w-100" class="mt-2">
        <%= link_to "Login", new_client_user_session_path, class: "btn btn-secondary" %>
        <%= link_to "Register", new_client_user_registration_path, class: "btn btn-secondary" %>
      </div>
      <div class="form-floating mt-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email %>
      </div>

      <div class="form-floating mt-2">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check text-start my-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
      <div class="mt-2"><%= f.submit "Sign in", class: "btn btn-secondary w-100" %></div>
    <% end %>
  </main>
</div>
</div>

