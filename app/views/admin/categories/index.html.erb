<div class="mx-auto" style="width: 200px;">
  <h1>Category</h1>
  <table class="table table-dark">
    <thead>
    <td>Name</td>
    <td>Action</td>
    </thead>
  </table>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <td>
          <%= link_to :edit, edit_category_path(category) %><br>
          <%= button_to :delete, category_path(category), method: :delete %><br>
        </td>
      </li>
    <% end %>
  </ul>
</div>

<button><%= link_to 'new', new_category_path, class: "btn btn-light" %></button>
